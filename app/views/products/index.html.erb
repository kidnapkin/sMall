<div class="product-big-title-area">
      <div class="container">
          <div class="row">
              <div class="col-md-12">
                  <div class="product-bit-title text-center">
                      <h2>Shop</h2>
                  </div>
              </div>
          </div>
      </div>
  </div>
  
  
  <div class="single-product-area">
      <div class="zigzag-bottom"></div>
      <div class="container">
          <div class="row">
              <% @products.each do |product| %>
                  <div class="col-md-3 col-sm-6">
                    <div class="single-shop-product">
                        <div class="product-upper">
                            <%= image_tag product.image? ? product.image.url : 'product-placeholder.jpg' %>
                        </div>
                        <h2><%= link_to product.name, product %></h2>
                        <div class="product-carousel-price">
                            <ins>$<%= product.price %></ins> <del>$999.00</del>
                        </div>  
                        
                        <div class="product-option-shop">
                            <%= button_to 'Add to Cart', line_items_path(product_id: product), class: 'add_to_cart_button' %>
                            <%= link_to 'Edit', edit_product_path(product), class: 'add_to_cart_button' %>
                            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'add_to_cart_button' %>
                        </div>                       
                    </div>
                  </div>
              <% end %>

          </div>
          
          <%= link_to 'New Product', new_product_path %>
          
          <div class="row">
              <div class="col-md-12">
                  <div class="product-pagination text-center">
                      <nav>
                        <ul class="pagination">
                          <li>
                            <a href="#" aria-label="Previous">
                              <span aria-hidden="true">&laquo;</span>
                            </a>
                          </li>
                          <li><a href="#">1</a></li>
                          <li><a href="#">2</a></li>
                          <li><a href="#">3</a></li>
                          <li><a href="#">4</a></li>
                          <li><a href="#">5</a></li>
                          <li>
                            <a href="#" aria-label="Next">
                              <span aria-hidden="true">&raquo;</span>
                            </a>
                          </li>
                        </ul>
                      </nav>                        
                  </div>
              </div>
          </div>
      </div>
  </div>

<p id="notice"><%= notice %></p>