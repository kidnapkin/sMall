<div class="site-branding-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="logo">
                    <h1>
                        <%= link_to root_path do %>
                            s<span>Mall</span>
                        <% end %>
                    </h1>
                </div>
            </div>
            
            <div class="col-sm-6">
                <div class="shopping-item">
                    <%= link_to @cart do %>
                      Cart - <span class="cart-amunt"><%= number_to_currency(@cart.total_price) %></span> <i class="fa fa-shopping-cart"></i> <span class="product-count"><%= @cart.line_items.count %></span>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End site branding area -->