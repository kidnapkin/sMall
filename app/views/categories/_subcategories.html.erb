<ul class="nav nav-pills nav-stacked nested_nav">
  <% categories.each do |category, children| %>
      <li class="<%= 'active' if current_page?(category_path(category)) %>">
        <%= link_to category.name, category %>
        <%= render 'subcategories', categories: children if children.present? %>
      </li>
  <% end %>
</ul>