<%= render 'shared/product_title', title: 'Shop' %>

<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Categories</h3>
              </div>
              <div class="panel-body">
                <ul class="nav nav-pills nav-stacked">
                  <% @categories.roots.each do |category| %>
                    <li class="<%= 'active' if current_page?(category_path(category)) %>">
                      <%= link_to category.name, category %>
                      <%= render 'subcategories', categories: category.root.descendants.arrange %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
            <div class="col-md-9">
                <div class="row is-flex">
                    <%= render @products || 'There are no products available.' %>
                </div>
  
                <div class="row">
                    <div class="col-md-12">
                        <div class="product-pagination text-center">
                            <nav>
                              <%= will_paginate @products, previous_label: '&laquo;', next_label: '&raquo;' %>
                            </nav>                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>